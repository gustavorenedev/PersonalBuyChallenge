@model PersonalBuy.Models.Produto

<h2>Detalhes do Produto</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Produto
        </dt>
        <dd class="col-sm-10">
            @Model.NomeProduto
        </dd>
        <dt class="col-sm-2">
            Descrição do Produto
        </dt>
        <dd class="col-sm-10">
            @Model.DescricaoProduto
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Model.CategoriaProduto
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Model.PrecoProduto
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
